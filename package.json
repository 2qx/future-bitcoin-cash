{
  "name": "future-bitcoin-cash",
  "version": "0.0.1",
  "main": "index.js",
  "repository": "https://gitlab.com/2qx/future-bitcoin-cash.git",
  "author": "2qx.futures@small.neomailbox.ch",
  "license": "MIT",
  "type": "module",
  "private": true,
  "directories": {
    "lib": "src",
    "test": "test"
  },
  "scripts": {
    "build": "yarn clean && yarn compile",
    "build:test": "yarn clean:test && yarn compile:test",
    "clean": "rm -rf ./dist",
    "clean:test": "rm -rf ./dist-test",
    "compile": "tsc -p tsconfig.json && yarn update:artifacts",
    "compile:test": "tsc -p tsconfig.test.json && yarn update:artifacts",
    "update:artifacts": "node tasks/updateArtifacts.js",
    "lint": "eslint . --ext .ts --ignore-path ../../.eslintignore",
    "prepare": "yarn build",
    "prepublishOnly": "yarn test && yarn lint",
    "pretest": "yarn build:test",
    "test": "NODE_OPTIONS='--experimental-vm-modules --no-warnings' jest",
    "regtest:up": "./jest/docker/start.sh",
    "regtest:down": "./jest/docker/stop.sh"
  },
  "dependencies": {
    "@bitauth/libauth": "^2.1.0",
    "cashc": "^0.10.0-next.3",
    "cashscript": "^0.10.0-next.3"
  },
  "devDependencies": {
    "@jest/globals": "^29.4.1",
    "@tsconfig/node-lts-strictest-esm": "^18.12.1",
    "@types/jest": "^29.4.1",
    "dotenv": "^16.4.5",
    "jest": "^29.4.1",
    "mainnet-js": "^2.3.11",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.4",
    "url-join": "^5.0.0"
  }
}
