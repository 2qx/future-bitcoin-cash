{
  "name": "future-bitcoin-cash",
  "private": true,
  "workspaces": {
    "packages": [
      "./packages/*"
    ],
    "installConfig": {
      "hoistingLimits": "workspaces"
    }
  },
  "version": "0.0.1",
  "main": "index.js",
  "repository": "https://gitlab.com/2qx/future-bitcoin-cash.git",
  "author": "2qx.futures@small.neomailbox.ch",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "build": "turbo run build",
    "build:clean": "turbo run clean:build",
    "dev": "turbo run dev",
    "lint-format": "turbo run --parallel lint format ",
    "lint-format:fix": "turbo run --parallel lint:fix format:fix",
    "lint": "eslint . --ext .js,.ts",
    "lint:fix": "eslint . --ext .js,.ts --fix",
    "format": "prettier --check .",
    "format:fix": "prettier --write .",
    "test-nope": "turbo run --parallel test",
    "typecheck": "turbo run --parallel typecheck",
    "check-types": "tsc --noEmit",
    "prepare": "husky install",
    "app:dev": "pnpm --filter @fbch/app run dev",
    "build:test": "pnpm clean:test && pnpm compile:test",
    "build:contracts": "yarn workspace @fbch/contracts build",
    "compile": "tsc -p tsconfig.json",
    "compile:test": "tsc -p tsconfig.test.json",
    "update:artifacts": "node script/index.js",
    "test": "NODE_OPTIONS='--experimental-vm-modules --es-module-specifier-resolution=bundler' ./node_modules/jest/bin/jest.js  --config jest.config.js  --forceExit",
    "regtest:up": "./jest/docker/start.sh",
    "regtest:down": "./jest/docker/stop.sh"
  },
  "dependencies": {
    "@bitauth/libauth": "^2.1.0",
    "@electrum-cash/network": "^3.3.0"
  },
  "devDependencies": {
    "@jest/globals": "^29.4.1",
    "@types/jest": "^29.4.1",
    "@types/node": "^18.7.18",
    "cashc": "^0.10.0-next.4",
    "cashscript": "^0.10.0-next.4",
    "dotenv": "^16.4.5",
    "glob": "^10.4.2",
    "husky": "^8.0.0",
    "jest": "^29.4.1",
    "mainnet-js": "^2.3.11",
    "ts-jest": "^29.1.5",
    "ts-node": "^10.9.2",
    "turbo": "^1.8.3",
    "typescript": "^5.5.2",
    "url-join": "^5.0.0"
  },

  "packageManager": "pnpm@8.15.5"
}